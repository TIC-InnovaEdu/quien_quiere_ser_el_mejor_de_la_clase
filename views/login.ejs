<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @keyframes anim {
            0% {
                color: #555;
                text-shadow: none;
            }
            85% {
                color: #ffea00;
                text-shadow: 0 0 1vw #ffc400, 0 0 3vw #f44336;
            }
            100% {
                color: #555;
                text-shadow: none;
            }
        }

        .header-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: #555;
            text-shadow: none;
            animation: anim 1s infinite linear;
            margin: 0 5px;
        }

        .header-text:nth-child(1) { animation-delay: 0.4s; }
        .header-text:nth-child(2) { animation-delay: 0.8s; }
        .header-text:nth-child(3) { animation-delay: 1.2s; }
        .header-text:nth-child(4) { animation-delay: 1.6s; }
        .header-text:nth-child(5) { animation-delay: 2.0s; }
        .header-text:nth-child(6) { animation-delay: 2.4s; }
        .header-text:nth-child(7) { animation-delay: 2.8s; }
        .header-text:nth-child(8) { animation-delay: 3.2s; }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0); }
            50% { transform: translateY(-10px) rotate(5deg); }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.8; }
            50% { transform: scale(1.1); opacity: 1; }
        }

        @keyframes shimmer {
            0% { background-position: -200% 0; }
            100% { background-position: 200% 0; }
        }

        .float-icon {
            animation: float 3s ease-in-out infinite;
        }

        .pulse-icon {
            animation: pulse 2s ease-in-out infinite;
        }

        .shimmer-effect {
            background: linear-gradient(90deg, #ffea00 25%, #ffc400 50%, #ffea00 75%);
            background-size: 200% 100%;
            animation: shimmer 3s infinite;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .button-hover {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            background: linear-gradient(45deg, #f44336, #ff5722);
        }

        .button-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(244, 67, 54, 0.4);
        }

        .button-hover::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            transform: rotate(45deg);
            animation: shimmer 2s infinite;
        }

        input:focus {
            border-color: #ffea00 !important;
            box-shadow: 0 0 0 3px rgba(255, 234, 0, 0.2) !important;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-900 via-red-900 to-gray-900 min-h-screen flex flex-col">
    <!-- Header con la animación original -->
    <header class="bg-[#171810] py-8 shadow-lg relative overflow-hidden">
        <ul class="flex justify-center items-center m-0 p-0 list-none">
            <li class="header-text">¿QUIEN</li>
            <li class="header-text">QUIERE</li>
            <li class="header-text">SER</li>
            <li class="header-text">EL</li>
            <li class="header-text">MEJOR</li>
            <li class="header-text">DE</li>
            <li class="header-text">LA</li>
            <li class="header-text">CLASE?</li>
        </ul>
    </header>

    <!-- Contenedor principal -->
    <div class="flex-1 flex items-center justify-center px-4 py-12 relative">
        <!-- Iconos decorativos flotantes -->
        <div class="absolute left-10 top-10 text-yellow-300 opacity-60 float-icon">
            <i class="fas fa-medal text-5xl"></i>
        </div>
        <div class="absolute right-10 bottom-10 text-yellow-300 opacity-60 float-icon" style="animation-delay: -1.5s;">
            <i class="fas fa-award text-5xl"></i>
        </div>

        <div class="w-full max-w-md">
            <!-- Alerta de error -->
            <% if (message.length > 0) { %>
                <div class="mb-4 p-4 rounded-lg bg-red-900 border border-red-600 text-yellow-300 flex items-center">
                    <i class="fas fa-exclamation-circle mr-2 pulse-icon"></i>
                    <%= message %>
                </div>
            <% } %>

            <!-- Formulario -->
            <form action="/login" method="POST" class="bg-gray-900 shadow-2xl rounded-lg p-8 relative overflow-hidden border border-yellow-500/30">
                <!-- Icono decorativo de fondo -->
                <div class="absolute top-0 right-0 text-yellow-500 opacity-5 text-9xl transform rotate-12 translate-x-1/4 -translate-y-1/4">
                    <i class="fas fa-user-graduate"></i>
                </div>

                <div class="text-center mb-8">
                    <i class="fas fa-graduation-cap text-4xl text-yellow-400 mb-4 pulse-icon"></i>
                    <h1 class="text-3xl font-bold shimmer-effect">Iniciar sesión</h1>
                </div>

                <!-- Campo de usuario -->
                <div class="mb-6">
                    <label class="block relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-yellow-500">
                            <i class="fa-regular fa-user"></i>
                        </span>
                        <input name="username"
                               type="text"
                               id="username"
                               required
                               placeholder="Usuario"
                               class="w-full pl-10 pr-4 py-3 bg-gray-800 border border-yellow-500/30 text-yellow-100 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent outline-none transition duration-200 placeholder-yellow-500/50">
                    </label>
                </div>

                <!-- Campo de contraseña -->
                <div class="mb-6">
                    <label class="block relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-yellow-500">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input name="password"
                               type="password"
                               id="contrasenia"
                               required
                               placeholder="Contraseña"
                               class="w-full pl-10 pr-4 py-3 bg-gray-800 border border-yellow-500/30 text-yellow-100 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-transparent outline-none transition duration-200 placeholder-yellow-500/50">
                    </label>
                </div>

                <!-- Enlace de registro -->
                <div class="text-center mb-6">
                    <a href="/register" class="text-yellow-500 hover:text-yellow-300 transition duration-200 flex items-center justify-center group">
                        <i class="fas fa-user-plus mr-2 group-hover:scale-110 transition-transform"></i>
                        <span class="shimmer-effect">Si no tiene cuenta regístrate</span>
                    </a>
                </div>

                <!-- Botón de submit -->
                <button type="submit"
                        id="button"
                        class="w-full py-3 px-4 rounded-lg text-white font-medium flex items-center justify-center button-hover">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Iniciar sesión
                </button>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-yellow-500 py-4 text-center relative border-t border-yellow-500/30">
        <div class="container mx-auto px-4 flex items-center justify-center">
            <i class="fas fa-users mr-2 pulse-icon"></i>
            <p class="text-sm shimmer-effect">Los Aventureros</p>
        </div>
    </footer>
</body>
</html>
